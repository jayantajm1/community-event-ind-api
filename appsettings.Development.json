{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=community_events_platform;Username=postgres;Password=postgres"
  },
  "Jwt": {
    "Key": "your-super-secret-key-change-this-in-production-min-32-chars",
    "Issuer": "CommunityEventsApi",
    "Audience": "CommunityEventsClient",
    "ExpiryInHours": 24
  },
  "FileUpload": {
    "MaxFileSizeMB": 5,
    "AllowedExtensions": [ ".jpg", ".jpeg", ".png", ".gif", ".webp" ],
    "UploadPath": "wwwroot/uploads"
  },
  "Geo": {
    "DefaultSearchRadiusKm": 10,
    "MaxSearchRadiusKm": 100
  }
}
